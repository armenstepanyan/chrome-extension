{
    "background": {
    "service_worker": "background.js"
	 },
	 "action": {
		"default_icon": "32.png"
	 },
   "content_scripts": [ {
      "js": [ "content_script.js" ],
      "matches": [ "<all_urls>" ],
      "run_at": "document_start"
   } ],
   "description": "Simple chrome extension",
   "icons": {
      "128": "128.png",
      "16": "32.png",
      "48": "64.png"
   },
   "manifest_version": 3,
   "name": "Simple extension",
   "options_page": "options/index.html",
   "permissions": [ "tabs", "contextMenus"],
   "version": "1.0"
}
